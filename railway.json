{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "main-app": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "node server-mongodb.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    "media-proxy": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "node media-proxy-server.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    }
  }
}
